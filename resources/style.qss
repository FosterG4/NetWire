/* Scroll Bar Styling */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Progress Bar Styling */
QProgressBar {
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    text-align: center;
    background-color: #f5f5f5;
    color: #2c2c2c;
}

QProgressBar::chunk {
    background-color: #1976d2;
    border-radius: 3px;
}

/* ===== DARK THEME STYLING ===== */

QMainWindow[theme="dark"] {
    background-color: #2d2d2d;
    color: #f0f0f0;
}

QMainWindow[theme="dark"] QMenuBar {
    background-color: #3d3d3d;
    color: #f0f0f0;
    border-bottom: 1px solid #4d4d4d;
}

QMainWindow[theme="dark"] QMenuBar::item:selected {
    background-color: #4d4d4d;
    color: #90caf9;
}

QMainWindow[theme="dark"] QMenu {
    background-color: #3d3d3d;
    color: #f0f0f0;
    border-color: #4d4d4d;
}

QMainWindow[theme="dark"] QMenu::item:selected {
    background-color: #4d4d4d;
    color: #90caf9;
}

QMainWindow[theme="dark"] QToolBar {
    background-color: #3d3d3d;
    border-bottom: 1px solid #4d4d4d;
}

QMainWindow[theme="dark"] QToolButton {
    color: #f0f0f0;
}

QMainWindow[theme="dark"] QToolButton:hover {
    background: #4d4d4d;
    border: 1px solid #5d5d5d;
}

QMainWindow[theme="dark"] QTabWidget::pane {
    background: #3d3d3d;
    border-color: #4d4d4d;
}

QMainWindow[theme="dark"] QTabBar::tab {
    background: #3d3d3d;
    color: #f0f0f0;
    border-color: #4d4d4d;
}

QMainWindow[theme="dark"] QTabBar::tab:selected {
    background: #2d2d2d;
    border-bottom: 1px solid #2d2d2d;
    color: #90caf9;
}

QMainWindow[theme="dark"] QTableView {
    background: #3d3d3d;
    color: #f0f0f0;
    border-color: #4d4d4d;
    gridline-color: #4d4d4d;
    selection-background-color: #5d5d5d;
    selection-color: white;
}

QMainWindow[theme="dark"] QHeaderView::section {
    background-color: #3d3d3d;
    color: #f0f0f0;
    border-color: #4d4d4d;
}

QMainWindow[theme="dark"] QStatusBar {
    background-color: #3d3d3d;
    border-top: 1px solid #4d4d4d;
    color: #f0f0f0;
}

QMainWindow[theme="dark"] QComboBox {
    background-color: #3d3d3d;
    color: #f0f0f0;
    border-color: #4d4d4d;
}

QMainWindow[theme="dark"] QComboBox::drop-down {
    border-left: 1px solid #4d4d4d;
}

QMainWindow[theme="dark"] QLabel {
    color: #f0f0f0;
}

QMainWindow[theme="dark"] QCheckBox {
    color: #f0f0f0;
}

QMainWindow[theme="dark"] QCheckBox::indicator {
    border-color: #4d4d4d;
    background-color: #3d3d3d;
}

QMainWindow[theme="dark"] QCheckBox::indicator:checked {
    background-color: #90caf9;
    border-color: #90caf9;
}
