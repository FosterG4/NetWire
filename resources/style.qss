/* ===== LIGHT THEME STYLING ===== */

/* Main Window */
QMainWindow {
    background-color: #ffffff;
    color: #2c2c2c;
}

/* Menu Bar Styling */
QMenuBar {
    background-color: #f8f9fa;
    color: #2c2c2c;
    border-bottom: 1px solid #e9ecef;
    padding: 2px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 3px;
}

QMenuBar::item:selected {
    background-color: #e3f2fd;
    color: #1976d2;
}

QMenuBar::item:pressed {
    background-color: #bbdefb;
}

/* Menu Styling */
QMenu {
    background-color: #ffffff;
    color: #2c2c2c;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 20px;
    border-radius: 2px;
}

QMenu::item:selected {
    background-color: #e3f2fd;
    color: #1976d2;
}

QMenu::separator {
    height: 1px;
    background-color: #e0e0e0;
    margin: 4px 8px;
}

/* Toolbar Styling */
QToolBar {
    background-color: #f8f9fa;
    border: none;
    border-bottom: 1px solid #e9ecef;
    spacing: 8px;
    padding: 8px;
}

QToolButton {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 6px 12px;
    color: #2c2c2c;
    font-weight: 500;
}

QToolButton:hover {
    background: #e3f2fd;
    border: 1px solid #bbdefb;
    color: #1976d2;
}

QToolButton:pressed {
    background: #bbdefb;
    border: 1px solid #90caf9;
}

/* Tab Widget Styling */
QTabWidget::pane {
    border: 1px solid #e0e0e0;
    background: #ffffff;
    margin: 0px;
    padding: 8px;
}

QTabBar::tab {
    background: #f5f5f5;
    color: #666666;
    border: 1px solid #e0e0e0;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 8px 16px;
    margin-right: 2px;
    font-weight: 500;
}

QTabBar::tab:selected {
    background: #ffffff;
    color: #1976d2;
    border-bottom: 1px solid #ffffff;
    margin-bottom: -1px;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background: #f0f0f0;
    color: #424242;
}

/* Table View Styling */
QTableView {
    border: 1px solid #e0e0e0;
    background: #ffffff;
    gridline-color: #f5f5f5;
    selection-background-color: #e3f2fd;
    selection-color: #1976d2;
    alternate-background-color: #fafafa;
}

QTableView::item {
    padding: 8px;
    border: none;
}

QTableView::item:selected {
    background-color: #e3f2fd;
    color: #1976d2;
}

QHeaderView::section {
    background-color: #f8f9fa;
    color: #424242;
    padding: 8px;
    border: 1px solid #e9ecef;
    font-weight: 600;
    font-size: 11px;
}

QHeaderView::section:hover {
    background-color: #e3f2fd;
}

/* Group Box Styling */
QGroupBox {
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    margin-top: 1.5em;
    padding-top: 12px;
    font-weight: 600;
    color: #424242;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 8px;
    color: #1976d2;
}

/* Status Bar Styling */
QStatusBar {
    background-color: #f8f9fa;
    color: #666666;
    border-top: 1px solid #e9ecef;
    padding: 4px 12px;
    font-size: 11px;
}

QStatusBar::item {
    border: none;
}

/* Combo Box Styling */
QComboBox {
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    padding: 6px 12px;
    min-width: 8em;
    background-color: #ffffff;
    color: #2c2c2c;
}

QComboBox:hover {
    border-color: #bbdefb;
}

QComboBox:focus {
    border-color: #1976d2;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #e0e0e0;
    background-color: #f8f9fa;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 4px solid #666666;
    margin-right: 8px;
}

/* Push Button Styling */
QPushButton {
    background-color: #1976d2;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: 500;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #1565c0;
}

QPushButton:pressed {
    background-color: #0d47a1;
}

QPushButton:disabled {
    background-color: #e0e0e0;
    color: #9e9e9e;
}

/* Label Styling */
QLabel {
    color: #2c2c2c;
    font-size: 12px;
}

QLabel[class="title"] {
    font-size: 16px;
    font-weight: 600;
    color: #1976d2;
}

QLabel[class="subtitle"] {
    font-size: 14px;
    font-weight: 500;
    color: #424242;
}

/* Check Box Styling */
QCheckBox {
    color: #2c2c2c;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #e0e0e0;
    border-radius: 3px;
    background-color: #ffffff;
}

